{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "composite": false,
    "strict": true,
    "moduleResolution": "node",
    "ignoreDeprecations": "5.0",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "./*.js",
    "node_modules"
  ]
}